/**
* -------------------------------------
* General link change throughout the CP
* -------------------------------------
* Attempts to change link to content_edit into zenbu links
* For example, should cover "Edit" links in Structure, link in Overview page, Accessories, Zoo Flexible Admin, etc.
*/
if (! /\/cp\/publish\/edit$/.test(window.location.href) && ! /\/cp\/publish\/edit\&/.test(window.location.href))
// If you made it as far as this script and
// the native EE entry listing, you deserve
// a pristine, Zenbu-less experience.
{
	$("a[href*=\"cp/publish/edit\"]").each(function (){
		$(this).attr("href", $(this).attr("href").replace(/cp\/publish\/edit(?!\/entry)/g, "cp/addons/settings/zenbu"));
		$(this).attr("href", $(this).attr("href").replace(/filter_by_channel/, "channel_id"));
	});
}

